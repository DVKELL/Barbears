<section class="grid min-h-dvh place-items-center px-4 bg-Verde-Hover/20">
    <div
        class="w-full max-w-md rounded-2xl bg-white backdrop-blur p-6 shadow-xl ring-1 ring-gray-300"
    >
        <p class="mb-1.5 bg-Verde-Hover/40 p-2 rounded-sm text-sm">
            Bienvenido de nuevo
        </p>

        <form id="loginForm" class="space-y-4">
            <div class="space-y-2">
                <label for="email" class="block text-sm font-medium"
                    >Correo</label
                >
                <input
                    id="email"
                    name="email"
                    type="email"
                    autocomplete="email"
                    class="w-full rounded-lg border border-gray-400 bg-white/95 px-3 py-2 text-[15px] text-black placeholder-black/40 outline-none transition focus:ring-2 focus:ring-Vinotinto focus:border-transparent"
                    placeholder="tu@correo.com"
                />
            </div>

            <div class="space-y-2 mt-5">
                <div class="flex items-center justify-between">
                    <label for="password" class="block text-sm font-medium"
                        >Contraseña</label
                    >
                    <a
                        href="#"
                        class="text-xs text-Vinotinto hover:text-shadow-Vinotinto transition"
                        >¿Olvidaste tu contraseña?</a
                    >
                </div>
                <input
                    id="password"
                    name="password"
                    type="password"
                    autocomplete="current-password"
                    class="w-full rounded-lg border border-gray-400 bg-white/95 px-3 py-2 text-[15px] text-black placeholder-black/40 outline-none transition focus:ring-2 focus:ring-Vinotinto focus:border-transparent"
                    placeholder="••••••••"
                />
            </div>

            <div class="flex items-center justify-between pt-1">
                <label class="flex items-center gap-2 text-xs select-none">
                    <input
                        type="checkbox"
                        class="size-4 rounded border-white/30 bg-white/95 text-Mostaza focus:ring-Vinotinto"
                    />
                    Recuérdame
                </label>
            </div>

            <button
                type="submit"
                class="mt-2 inline-flex w-full items-center justify-center gap-2 rounded-xl bg-Mostaza px-4 py-2.5 text-sm font-semibold text-black shadow transition hover:bg-Mostaza-Hover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-Vinotinto focus-visible:ring-offset-Verde-Botella"
            >
                Entrar
            </button>
            <div id="errorBox"></div>
        </form>
    </div>
</section>

<script type="module" src="/js/loginForm.js"></script>
